HOST=0.0.0.0
PORT=8080

# Set to true only if your app runs behind a trusted reverse proxy.
TRUST_PROXY=false

# Redirect HTTP to HTTPS (recommended in production).
FORCE_HTTPS=false

# Optional comma separated allow list for Host header validation.
# Example: ALLOWED_HOSTS=renn-trabi.de,www.renn-trabi.de
ALLOWED_HOSTS=

# Optional CORS allowlist for cross-origin frontend calls (e.g. GitHub Pages -> API).
# Example: CORS_ALLOWED_ORIGINS=https://www.bembelracingteam.de,https://bembelracingteam.de
CORS_ALLOWED_ORIGINS=
# Set to false only if you do not want credentials in CORS responses.
CORS_ALLOW_CREDENTIALS=true

# Request filtering
MAX_URL_LENGTH=2048
MAX_CONTENT_LENGTH=16384
MAX_CONCURRENT_REQUESTS_PER_IP=24
REQUEST_TIMEOUT_MS=15000

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=180
RATE_LIMIT_BLOCK_MS=600000

# Lead funnel / CRM-light
LEAD_STORE_FILE=data/leads.json
AUTO_REPLY_LOG_FILE=data/auto-replies.jsonl
LEAD_HASH_SALT=change-me
MIN_FORM_FILL_MS=2000
MAX_FORM_AGE_MS=86400000
FORM_RATE_LIMIT_WINDOW_MS=900000
FORM_RATE_LIMIT_MAX_REQUESTS=10
FORM_RATE_LIMIT_BLOCK_MS=3600000
MAX_LEADS_STORED=5000

# Race center
RACE_STORE_FILE=data/race-center.json
RACE_HASH_SALT=change-me
RACE_FEED_MAX_ITEMS=600
RACE_REACTION_WINDOW_MS=60000
RACE_REACTION_MAX_REQUESTS=36
RACE_REACTION_BLOCK_MS=600000
RACE_VOTE_WINDOW_MS=60000
RACE_VOTE_MAX_REQUESTS=12
RACE_VOTE_BLOCK_MS=900000

# Admin access
ADMIN_TOKEN=

# Auto-reply
AUTO_REPLY_ENABLED=true
AUTO_REPLY_FROM=noreply@bembelracingteam.de
AUTO_REPLY_REPLY_TO=kontakt@bembelracingteam.de
AUTO_REPLY_WEBHOOK_URL=
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
