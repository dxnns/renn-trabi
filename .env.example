HOST=0.0.0.0
PORT=8080

# Set to true only if your app runs behind a trusted reverse proxy.
TRUST_PROXY=false

# Redirect HTTP to HTTPS (recommended in production).
FORCE_HTTPS=false

# Optional comma separated allow list for Host header validation.
# Example: ALLOWED_HOSTS=renn-trabi.de,www.renn-trabi.de
ALLOWED_HOSTS=

# Request filtering
MAX_URL_LENGTH=2048
MAX_CONTENT_LENGTH=1024
MAX_CONCURRENT_REQUESTS_PER_IP=24
REQUEST_TIMEOUT_MS=15000

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=180
RATE_LIMIT_BLOCK_MS=600000
